
<div class="row">

<%= tabs %>

<h3>Analyze My Ingredients</h3>	
	<div class="analyze_product_content"> 
		<% if @myproduct %>
			<p><h4>Caused breakouts: </h4></p>
			<p><h5>Yes | No</h5></p>
			
	<%= form_for @myproduct, url: analyze_path(@myproduct), method: :patch do |f| %>

   	<% @myproduct.products.each do |item| %>
   				<%= check_box_tag 'products_breakout[]', item, checked = @myproduct.products_breakout.include?(item) %> | 
				<%= check_box_tag 'products_safe[]', item, checked = @myproduct.products_safe.include?(item) %>
   				<%= f.label item %>
					
					
					<br>
					
	<% end %>
	<br />
  
  <p><%= f.submit 'Submit', :class => "btn btn-primary" %></p>

	<% end %>
			

		<% elsif @myproduct == nil %>
		<br>
		No product added yet. Please add your products!<br>
		<%= link_to 'Add My Products', myproducts_path, :class => "btn btn-primary" %>
		<% end %>
	</div>

	    <br />
	    
	 
</div>