<div class="row">
<h3>Edit Skin Profile</h3>
<%= form_for @profile do |f| %>
 
  <% if @profile.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@profile.errors.count, "error") %> prohibited
        this product from being saved:
      </h2>
      <ul>
        <% @profile.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
    <div class="the-basics">
      <%= f.label :age, "Age:" %><br>
      <% if Profile.where(user_id: current_user).pluck(:age).first.present? %>
      <%= f.select :age, [Profile.where(user_id: current_user).pluck(:age).first], {}, class: "profile_age" %>
      <% else %>
      <%= f.select :age, [], {}, class: "profile_age" %>
      <% end %>
    </div>
    <div class="the-basics">
      <%= f.label :skin_type, "Skin Type:" %><br>
      <% if Profile.where(user_id: current_user).pluck(:skin_type).first.present? %>
      <%= f.select :skin_type, [Profile.where(user_id: current_user).pluck(:skin_type).first], {}, class: "profile_skin_type" %>
      <% else %>
      <%= f.select :skin_type, [], {}, class: "profile_skin_type" %>
      <% end %>
    </div>
    <div class="the-basics">
      <%= f.label :ethnicity, "Ethnicity:" %><br>
      <% if Profile.where(user_id: current_user).pluck(:ethnicity).first.present? %>
      <%= f.select :ethnicity, [Profile.where(user_id: current_user).pluck(:ethnicity).first], {}, class: "profile_ethnicity" %>
      <% else %>
      <%= f.select :ethnicity, [], {}, class: "profile_ethnicity" %>
      <% end %>
    </div>
  <p>
    <%= f.submit "Save Changes", class: "submit_btn" %>
  </p>
 
<% end %>
 
<%#= link_to 'Back', profiles_path %>

</div>